{
  "workbench.activityBar.visible": false,
  "workbench.iconTheme": "file-icons-colourless",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  // "eslint.trace.server": "messages",
  // "cSpell.userWords": [
  //   "Enablement",
  //   "Strategize",
  //   "wireframes"
  // ],
  "markdownlint.config": {
    "MD013": false,
    "no-inline-html": false
  },
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "right",
  "terminal.integrated.shell.osx": "/usr/local/bin/fish",
  "editor.fontFamily": "Operator Mono, Monaco, 'Courier New', monospace",
  "editor.formatOnSave": false,
  // 
  // prettier
  // 
  "prettier.disableLanguages": ["javascript", "javascriptreact"],
  "prettier.arrowParens": "always",
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 100,
  "prettier.semi": false,
  "prettier.tabWidth": 2,
  "prettier.useTabs": false,
  "prettier.trailingComma": "es5",
  "prettier.singleQuote": true,
  // 
  // LANGUAGE SPECIFICS
  // 
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.formatOnSave": true
  },
  "[xml]": {
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.formatOnSave": true,
    "editor.wordWrapColumn": 80,
    "editor.wordWrap": "on",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // 
  // ESLINT
  // 
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true, // shows eslint in status bar
  "eslint.options": {
    "configFile": "/Users/josef.aidtibm.com/.config/.eslintrc.js",
    "ignorePath": "/Users/josef.aidtibm.com/.config/.eslintignore"
  },
  "eslint.packageManager": "yarn",
  "eslint.autoFixOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact"],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact", // enables emmet for React
    // "mdx": "javascriptreact" // enables emmet for React
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    // "mdx": "jsx"
  },
  // 
  "emmet.excludeLanguages": ["graphql"],
  // "editor.tabCompletion": "on",
  "emmet.triggerExpansionOnTab": true, // expand imported React components
  "emmet.showSuggestionsAsSnippets": true, // to get html tag completions before extension snippets
  "editor.snippetSuggestions": "top", // show snippets before any other auto completion
  "editor.multiCursorModifier": "alt",
  "editor.acceptSuggestionOnEnter": "off",
  "markdownlint.run": "onSave",
  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "debug.node.autoAttach": "off",
  "extensions.showRecommendationsOnlyOnDemand": true,
  "workbench.colorTheme": "Rouge 2 (alpha)",
  "window.zoomLevel": 0,
  "git.autofetch": true
}
